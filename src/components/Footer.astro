---
import { twMerge } from 'tailwind-merge'
import HeaderLink from './HeaderLink.astro'
import LinkButton from './LinkButton.astro'
---

<footer
  class={twMerge(
    'text-base-white box-border pt-px bg-gradient-to-r from-primary/30 via-primary to-primary/30',
    Astro.props.class,
  )}
  {...Astro.props}
>
  <div class="px-[10%] py-12 bg-neutral-900">
    <div class="flex flex-col gap-14">
      <div class="flex items-start justify-between">
        <div class="flex flex-col gap-6">
          <a class="text-2xl text-white font-medium" href="#"> Bruna Moraes </a>
          <span class="text-base text-neutral-400 font-medium"
            >Product designer</span
          >
          <div class="flex items-center">
            <div class="w-10 h-10 bg-primary rounded-lg"></div>
            <div class="h-4 w-px bg-neutral-600 mx-3"></div>
            <div class="w-10 h-10 bg-primary rounded-lg"></div>
            <div class="h-4 w-px bg-neutral-600 mx-3"></div>
            <div class="w-10 h-10 bg-primary rounded-lg"></div>
            <div class="h-4 w-px bg-neutral-600 mx-3"></div>
            <div class="w-10 h-10 bg-primary rounded-lg"></div>
          </div>
        </div>

        <div class="flex flex-col gap-6 items-start">
          <span class="text-base/5 text-base-white font-semibold px-2"
            >Menu</span
          >
          <nav class="flex items-center">
            <HeaderLink href="#projects" title="Projetos" />
            <HeaderLink href="#about" title="Sobre" />
            <HeaderLink href="#resume" title="Currículo" />
            <HeaderLink href="#contact" title="Contato" />
          </nav>
        </div>
      </div>

      <div class="flex justify-between items-center">
        <span class="text-base/5 text-base-white font-normal"
          >© 2024 Bruna Moraes. Todos os direitos reservados</span
        >

        <div class="flex gap-8 items-center">
          <span class="text-base/5 text-base-white font-normal"
            >Desenvolvido por <b class="font-bold">Euller Braz</b></span
          >
          <LinkButton href="#" title="Voltar ao topo" showTrailingIcon={true} />
        </div>
      </div>
    </div>
  </div>
</footer>

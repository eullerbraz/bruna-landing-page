---
import type { HTMLAttributes } from 'astro/types'
import { twMerge } from 'tailwind-merge'

interface Props extends HTMLAttributes<'a'> {
  variant?: 'primary' | 'secondary'
  title: string
}

const { variant = 'primary', href, title, ...props } = Astro.props
---

<a
  href={href}
  class={twMerge(
    'block w-fit rounded-md px-6 py-2 text-sm font-semibold text-base-white',
    variant === 'primary' && 'bg-primary',
    variant === 'secondary' && 'bg-neutral-800  border border-neutral-700',
    Astro.props.class,
  )}
  {...props}>{title}</a
>

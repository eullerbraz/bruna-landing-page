---
import type { HTMLAttributes } from 'astro/types'
import { twMerge } from 'tailwind-merge'

interface Props extends HTMLAttributes<'div'> {
  text: string
}

const { text, ...props } = Astro.props
---

<div
  class={twMerge(
    'box-border p-[2px] w-fit rounded-full bg-gradient-to-b from-primary/20 to-primary/40',
    Astro.props.class,
  )}
  {...props}
>
  <div class="bg-neutral-900 rounded-full">
    <div
      class="px-6 py-2 text-primary font-normal text-xs/5 w-full h-full rounded-full bg-gradient-to-b from-primary/0 to-primary/15"
    >
      {text}
    </div>
  </div>
</div>
